@model PageModel
@{
    Layout = "~/Views/Shared/_PageLayout.cshtml";

    List<SelectListItem> listItems = new List<SelectListItem>();
    foreach (Category category in Model.Categories)
    {
        listItems.Add(new SelectListItem() { Selected = false, Text = category.Title, Value = category.Id.ToString() });
    }
    var selectList = new SelectList(listItems);
}

<div class="article-page-form-container">
    <div class="header">
    <h3>ARTICLE EDIT</h3>
        <a asp-controller="Cms" asp-action="ArticleList" class="close-btn">&#10006;</a>
    </div>
    <form asp-action="CategoryAdd">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="SelectedArticle.Type" value="category" />
        <div>
            <label asp-for="SelectedArticle.Title"></label>
            <input class="input" asp-for="SelectedArticle.Title" />
            <span asp-validation-for="SelectedArticle.Title"></span>
        </div>
        <div>
            <label asp-for="SelectedArticle.Description"></label>
            <input class="input" asp-for="SelectedArticle.Description" />
            <span asp-validation-for="SelectedArticle.Description"></span>
        </div>
        <div>
            <label asp-for="SelectedArticle.Keywords"></label>
            <input class="input" asp-for="SelectedArticle.Keywords" />
            <span asp-validation-for="SelectedArticle.Keywords"></span>
        </div>
        <div>
            <label asp-for="SelectedArticle.Code"></label>
            <input class="input" asp-for="SelectedArticle.Code" />
            <span asp-validation-for="SelectedArticle.Code"></span>
        </div>
        <div- class="list-cat">
            <select asp-items="listItems">
                <option>Select Category</option>
            </select>
        </div->
        <div class="selected-cats">
            @{
                foreach(Category category in Model.SelectedArticle.Categories)
                {
                    <span>@category.Title</span>
                }
            }
        </div>
        <div>
            <input id="submit" type="submit" value="Create" />
        </div>
    </form>
</div>