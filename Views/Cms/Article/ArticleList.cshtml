@model PageModel
@{
    Layout = "~/Views/Shared/_PageLayout.cshtml";
    <div class="add-art-btn">
        <a asp-controller="Cms" asp-action="ArticleAdd">ADD ARTICLE</a>
    </div>
    <table class="article-page">
        <thead>
            <tr>
                <th>TITLE</th>
                <th>DESCRIPTION</th>
                <th>CREATED ON</th>
                <th>EDIT / DELETE</th>
            </tr>
        </thead>
        <tbody class="body">
            @{
                if (Model.SelectedCategory != null)
                {
                    foreach (Article article in Model.SelectedCategory.Articles)
                    {
                        <tr>
                            <th>@article.Title</th>
                            <th>@article.Description</th>
                            <th>@article.Keywords</th>
                            <th><div><a asp-controller="Cms" asp-action="ArticleEdit" as-route-articleId="@article.Id" class="pencil">&#9998;</a><a class="trash">&#128465;</a></div></th>
                        </tr>
                    }
                }
                else
                {
                    foreach (Article article in Model.Articles)
                    {
                        <tr>
                            <th>@article.Title</th>
                            <th>@article.Description</th>
                            <th>@article.Keywords</th>
                             <th><div class="action-wrapper"><a asp-controller="Cms" asp-action="ArticleEdit" as-route-articleId="@article.Id" class="pencil">&#9998;</a><a class="trash">&#128465;</a></div></th>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}
