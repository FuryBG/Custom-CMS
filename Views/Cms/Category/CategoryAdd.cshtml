@model WebApplication1.Models.Category

<div class="category-page-form-container">
    <form asp-action="CategoryAdd">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="ParentId" />
        <input type="hidden" asp-for="Type" value="category" />
            <label asp-for="Title"></label>
            <input class="input" asp-for="Title"/>
            <span asp-validation-for="Title"></span>
            <label asp-for="Description"></label>
                <input class="input" asp-for="Description" />
            <span asp-validation-for="Description"></span>
            <label asp-for="Keywords"></label>
                <input class="input" asp-for="Keywords" />
            <span asp-validation-for="Keywords"></span>
            <label asp-for="Code"></label>
                <input class="input" asp-for="Code" />
            <span asp-validation-for="Code"></span>
            <input id="submit" type="submit" value="Create"/>
    </form>
</div>
