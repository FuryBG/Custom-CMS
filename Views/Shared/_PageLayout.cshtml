@model PageModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string controllerName = ViewContext.RouteData.Values["action"].ToString();

    switch(controllerName)
    {
        case "Categories":
            <partial name="~/Views/Shared/CategoryAside.cshtml" model="@Model.Categories" />
            break;
        case "Articles":
            <partial name="~/Views/Shared/ArticleAside.cshtml" model="@Model.Articles" />
            break;
        case "Images":
            <partial name="~/Views/Shared/ImageAside.cshtml" model="@Model.Images" />
            break;
        default: break;
    }
}


@RenderBody()