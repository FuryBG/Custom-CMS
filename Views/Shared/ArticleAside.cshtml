@model List<Category>

<span class="open-toggle">&rArr;</span>
<div class="second-menu-page">
    <span class="close-btn">&#8656;</span>
    @{
        foreach (Category parent in Model)
        {
            <div class="main-cat">
                <a href="@Url.Action("ArticleList", "Cms", new { categoryId = parent.Id })">&#x21aa @parent.Title</a>
            </div>
            foreach (Category subCat in parent.SubCategories)
            {
                <div class="sub-cat">
                    <a href="@Url.Action("ArticleList", "Cms", new { categoryId = subCat.Id })">&#x21aa @subCat.Title</a>
                </div>
                foreach (Category subSubCat in subCat.SubCategories)
                {
                    <div class="sub-sub-cat">
                        <a href="@Url.Action("ArticleList", "Cms", new { categoryId = subSubCat.Id })">&#x21aa @subSubCat.Title</a>
                    </div>
                }
            }
        }
    }
</div>